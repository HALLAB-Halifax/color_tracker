#!/usr/bin/env python
import roslib
roslib.load_manifest('color_tracker')
import rospy

import cv
from std_msgs.msg import String
from sensor_msgs.msg import Image
from cv_bridge import CvBridge, CvBridgeError
#import cv
def callback(data):
    print 'hello'
    img=CvBridge.imgmsg_to_cv2(data,"bgr8")
    cv.imshow(img)
    cv.waitKey(1)


def listener():
    rospy.init_node('listener',anonymous=True)
    rospy.Subscriber("/ardone/bottom/image_raw",Image,callback)
    rospy.spin()


if __name__ == '__main__':
    listener()